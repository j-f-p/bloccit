<h1><%= @sponsor.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @sponsor.body %></p>
  </div>
  <div class="col-md-4">
    <% link_to "Edit", edit_topic_sponsor_path(@sponsor.topic, @sponsor),
      class: 'btn btn-success' %>
    <%= link_to "Delete Sponsored Post", [@sponsor.topic, @sponsor],
      method: :delete, class: 'btn btn-danger',
      data: {confirm: 'Are you sure you want to delete this post?'} %>
  </div>
</div>
